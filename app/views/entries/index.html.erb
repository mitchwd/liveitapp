<h1>Listing entries</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Author</th>
    <th>Lived It</th>
    <th colspan="2">Actions</th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= l entry.date, format: :short %></td>
    <td><%= entry.title %></td>
    <td><%= entry.author %></td>
    <td><%= entry.users.count %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

