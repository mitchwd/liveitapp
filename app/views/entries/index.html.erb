<h2>Listing All Entries</h2>
<%= link_to 'Add New Entry', new_entry_path %>

<% @entries.each do |entry| %>
  
<div class="article">
  <div class="tag tag_red">
    <div class="tagvalue">
      <p>Day</p>
	    <h3><%= entry.id %></h3>
    </div>
  </div>
    
  <div class="tag tag_green tag_second">
    <div class="tagvalue">
	    <h3></h3>
		  <p>&nbsp;</p>
    </div>
  </div>
  
  <h2><%= link_to entry.title, entry %></h2>
  
  <p><%= entry.content %><br /><br />

    <em><%= entry.verse_content %></em> 
    (<%= link_to entry.verse_reference + " " + entry.verse_translation, "http://www.biblegateway.com/passage/?version=#{entry.verse_translation}&search=#{entry.verse_reference}", target: "_blank" %>)
  </p>

  	<%= button_to "LiveIt", liveit_path(entry) %>
  </div>

  <!-- Sharing -->
  <div id="sharing">
    <div id="sharecontent">
  	  <br />
  	  <div id="share" class="hidden">
  	    <a href="#" class='zocial facebook'>Share on Facebook</a>
        <a href="#" class='zocial twitter'>Share on Twitter </a>
      </div>

      <div class="social">
        <%= pluralize(entry.users.count, "person") %> lived this out.<br />
        <% entry.users.first(10).each do |user| %>
          <%= image_tag("http://www.placehold.it/50x50", class: "user user_#{user.name}") %> 
        <% end %>
      </div>
    </div>
  </div>
</div>    
<% end %>