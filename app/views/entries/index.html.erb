<h1>Listing entries</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Author</th>
    <th>Content</th>
    <th>Verse</th>
    <th colspan="3">Actions</th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.date.to_s(:short) %></td>
    <td><%= entry.title %></td>
    <td><%= entry.author %></td>
    <td><%= truncate(entry.content, length: 30) %></td>
    <td><%= entry.verse_reference %> (<%= entry.verse_translation %>) <%= truncate(entry.verse_content, length: 15) %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'LiveIt', liveit_path(entry.id) %></td>
  </tr>
<% end %>
</table>

